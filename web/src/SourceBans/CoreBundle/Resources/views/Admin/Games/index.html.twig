{% extends '@SourceBansCore/layout.html.twig' %}

{% set pageTitle = 'controllers.admin.games.title' | trans %}

{% block title %}{{ pageTitle }} Â« {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th width="20%">{{ 'Folder' | trans }}</th>
                            <th>{{ 'Name' | trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for game in games %}
                        <tr>
                            <td>{{ game.folder }}</td>
                            <td>{{ game.name }}</td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="2">No results</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                {{ pagerfanta(games, 'twitter_bootstrap3', {
                    'css_container_class': 'pagination pull-right',
                    'next_message': '&raquo;',
                    'prev_message': '&laquo;',
                }) }}
            </div>
        </div>
    </div>
{% endblock %}
