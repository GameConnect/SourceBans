{% extends '@SourceBansCore/layout.html.twig' %}

{% set pageTitle = 'controllers.admin.groups.title' | trans %}

{% block title %}{{ pageTitle }} Â« {{ parent() }}{% endblock %}

{% block body %}
    {% embed '@SourceBansCore/Admin/layout.html.twig' %}
        {% block content %}
            <div class="panel">
                <div class="panel-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>{{ 'Name' | trans }}</th>
                                <th width="5%">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for group in groups %}
                            <tr>
                                <td>{{ group.name }}</td>
                                <td><a href="{{ path('sourcebans_core_admin_groups_edit', {'id': group.id}) }}">{{ 'Edit' | trans }}</a></td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="2">{{ 'No results' | trans }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}
