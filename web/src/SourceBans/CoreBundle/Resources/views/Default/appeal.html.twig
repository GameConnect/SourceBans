{% extends '@SourceBansCore/layout.html.twig' %}

{% form_theme form '@SourceBansCore/form_horizontal_layout.html.twig' %}

{% set pageTitle = 'controllers.default.appeal.title' | trans %}

{% block title %}{{ pageTitle }} Â« {{ parent() }}{% endblock %}

{% block body %}
    <div class="container-fluid page-container">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="panel">
                    <div class="panel-body">
                        {{ form_start(form) }}
                            {{ form_row(form.banSteam) }}
                            {{ form_row(form.banIp) }}
                            {{ form_row(form.reason) }}
                            {{ form_row(form.userEmail) }}
                            {{ form_row(form.submit) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
