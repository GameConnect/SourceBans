{% extends '@SourceBansCore/layout.html.twig' %}

{% form_theme form '@SourceBansCore/form_horizontal_layout.html.twig' %}

{% set pageTitle = 'controllers.default.report.title' | trans %}

{% block title %}{{ pageTitle }} Â« {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                {{ form_start(form) }}
                    {{ form_row(form.steam) }}
                    {{ form_row(form.ip) }}
                    {{ form_row(form.name) }}
                    {{ form_row(form.reason) }}
                    {{ form_row(form.userName) }}
                    {{ form_row(form.userEmail) }}
                    {{ form_row(form.server) }}
                    {{ form_row(form.submit) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>initServerSelect({el: '#{{ form.server.vars.id }}', url: '{{ path('sourcebans_core_servers_info', {'id': '__ID__'}) }}'});</script>
{% endblock %}
