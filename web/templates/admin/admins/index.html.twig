{% extends 'base.html.twig' %}

{% block title %}Admins Â« {{ parent() }}{% endblock %}

{% block body %}
    <main class="page">
        <div class="row">
            <div class="col">
                <h2>
                    Admins
                    <a href="{{ path('admin_admins_add') }}" class="btn btn-secondary float-right">Add admin</a>
                </h2>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th width="45%">Identity</th>
                            <th width="5%">&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for admin in admins %}
                        <tr>
                            <td>{{ admin.name }}</td>
                            <td>{{ admin.identity }}</td>
                            <td>
                                <a href="{{ path('admin_admins_edit', {'id': admin.id}) }}">Edit</a>
                                <a href="{{ path('admin_admins_delete', {'id': admin.id}) }}">Delete</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>
{% endblock %}
