{% extends 'base.html.twig' %}

{% block title %}Appeals Â« {{ parent() }}{% endblock %}

{% block body %}
    <main class="page">
        <div class="row">
            <div class="col">
                <h2>Appeals</h2>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th width="45%">Identity</th>
                            <th width="5%">&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for appeal in appeals %}
                        <tr>
                            <td>
                                {% if appeal.ban.name %}
                                    {{ appeal.ban.name }}
                                {% else %}
                                    <em class="text-muted">Unknown</em>
                                {% endif %}
                            </td>
                            <td>{{ appeal.ban }}</td>
                            <td>
                                <a href="{{ path('admin_appeals_archive', {'id': appeal.id}) }}">Archive</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>
{% endblock %}
