{% extends 'base.html.twig' %}

{% block title %}Games Â« {{ parent() }}{% endblock %}

{% block body %}
    <main class="page">
        <div class="row">
            <div class="col">
                <h2>
                    Games
                    <a href="{{ path('admin_games_add') }}" class="btn btn-secondary float-right">Add game</a>
                </h2>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th width="45%">Folder</th>
                            <th width="5%">&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for game in games %}
                        <tr>
                            <td>{{ game.name }}</td>
                            <td>{{ game.folder }}</td>
                            <td>
                                <a href="{{ path('admin_games_edit', {'id': game.id}) }}">Edit</a>
                                <a href="{{ path('admin_games_delete', {'id': game.id}) }}">Delete</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>
{% endblock %}
