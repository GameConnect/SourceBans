{% extends 'base.html.twig' %}

{% block title %}Web groups Â« {{ parent() }}{% endblock %}

{% block body %}
    <main class="page">
        <div class="row">
            <div class="col">
                <h2>
                    Web groups
                    <a href="{{ path('admin_groups_add') }}" class="btn btn-secondary float-right">Add group</a>
                </h2>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th width="5%">&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for group in groups %}
                        <tr>
                            <td>{{ group.name }}</td>
                            <td>
                                <a href="{{ path('admin_groups_edit', {'id': group.id}) }}">Edit</a>
                                <a href="{{ path('admin_groups_delete', {'id': group.id}) }}">Delete</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>
{% endblock %}
